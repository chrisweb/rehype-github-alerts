{
    "name": "rehype-github-alerts",
    "version": "1.0.0",
    "description": "rehype plugin to create alerts (admonitions/callouts)",
    "main": "./dist/index.js",
    "scripts": {
        "build": "esbuild ./src/index.ts --format=esm --bundle --minify --target=es2015 --outdir=dist && npm run types",
        "lint": "npx eslint src/",
        "types": "tsc --declaration --emitDeclarationOnly --declarationDir dist"
    },
    "author": "chrisweb (https://chris.lu)",
    "license": "MIT",
    "keywords": [
        "remark",
        "plugin",
        "mdx",
        "markdown",
        "alerts",
        "admonitions",
        "callouts",
        "typescript"
    ],
    "type": "module",
    "files": [
        "package*.json",
        "dist/*"
    ],
    "types": "./dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/chrisweb/rehype-github-alerts.git"
    },
    "bugs": "https://github.com/chrisweb/rehype-github-alerts/issues",
    "dependencies": {
        "unist-util-visit": "5.0.0",
        "hast-util-is-element": "3.0.0"
    },
    "devDependencies": {
        "@types/hast": "3.0.2",
        "@typescript-eslint/eslint-plugin": "6.9.1",
        "esbuild": "0.19.5",
        "eslint": "8.52.0",
        "typescript": "5.2.2"
    }
}
